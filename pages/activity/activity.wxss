.logo {
color: #2A7AF1;
text-align: center;
font-weight: bolder; 
font-size: 36px;
}
.container {
  padding: 10px;
}
.banner {
  display: flex;
  align-items: center;
}
.banner_left {
  background-color: #2A7AF1;
  color: white;
  height: 59px;
  padding-left: 8px;
  padding-right: 10px;
}
.banner_image {
  width: 127px;
  height: 91px;
  padding-left: 16px;
}
.instructor_card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color:white;
  border-radius: 7px;
  width: 319px;
  height: 100px;
  font-size: 10px;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.15);

}
.instructor_card_left {
  display:flex;
  flex-grow: 1;
  align-items: center;
}

.instructor_card_right{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: black 1px solid;
}
.xmas{
  width: 500rpx;
}
.activity_right {
  Width: 85px;
  Height: 82px;
  flex-shrink: 1;
  border-radius: 50px;
}
.activity_left {
  Width: 85px;
  Height: 82px;
  padding-left: 8px;
}
.activity_middle {
  padding-left: 8px;
}
.bold {
  font-size: bold;
}
.h3 {
  font-size: 14px;
  font-weight: bold;
}
.divLine{
  background:#2A7AF1;
  width: 100%;
  height: 2rpx;
 }
 .intro{
   padding-bottom: 20px; 
   display: flex;
 }
 button {
  width: 80%;
  margin-top: 20rpx;
  background-color:#14E3D3;
  color: white;
  border-radius: 3px; 
  width: 116px;
  height: 46px;
}
.info {
  display: flex;
  align-items: center;
  padding-top: 10px;

}
.info_left {
  font-size: 300px;
  align-items: center;
}
.info_right {
  font-size: 8px;
  padding-top: 5px;
